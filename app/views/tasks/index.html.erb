<h1>My tasks!</h1>
<ul>
  <% @index.each do |task| %>
  <% if task.completed %>

    <li><%= link_to "[x] " + task.title, task_path(task) %></li>

  <% else %>

    <li><%= link_to "[ ] " + task.title, task_path(task)  %></li>

    <%end%>
  <%end%>
</ul>

<button><%= link_to 'Create new task', 'tasks/new'  %></button>

